<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_5sdp"
    android:paddingStart="@dimen/_5sdp"
    android:paddingEnd="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:background="@color/white_20">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:gravity="start|center"
                android:text="Additional Address 1"
                android:textColor="#000000"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_weight="50"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:gravity="end"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/removePickupDropoffIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:src="@drawable/ic_baseline_remove_circle_outline_24"/>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:drawableTint="@color/color_dark_gray"
                android:gravity="center_vertical"
                android:text="Address Type"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:id="@+id/pickup_address_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:drawableEnd="@drawable/ic_down_arrow"
                android:drawableTint="@color/color_dark_gray"
                android:gravity="center"
                android:hint="Select"
                android:padding="@dimen/_7sdp"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:drawableTint="@color/color_dark_gray"
                android:gravity="center_vertical"
                android:text="Enter address"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border"
            android:padding="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:weightSum="100">

            <TextView
                android:id="@+id/tv_pickup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:gravity="center"
                android:hint="Enter address"
                android:paddingEnd="@dimen/_30sdp"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_10sdp" />
            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_down_arrow"
                android:rotation="-90"
                android:layout_centerInParent="true"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:id="@+id/distance_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:drawableTint="@color/color_dark_gray"
                android:gravity="center_vertical"
                android:text="Distance: 00.00 miles"

                android:textColor="@color/color_black"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="2">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:drawableTint="@color/color_dark_gray"
                android:gravity="center_vertical"
                android:text="Select Floor Level"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:drawableTint="@color/color_dark_gray"
                android:gravity="end"
                android:text="Select Lift"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="2">


            <TextView
                android:id="@+id/pickup_floor_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:drawableEnd="@drawable/ic_down_arrow"
                android:drawableTint="@color/color_dark_gray"
                android:gravity="center_vertical"
                android:hint="Select"
                android:padding="@dimen/_7sdp"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/pickup_lift_spinner"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:drawableEnd="@drawable/ic_down_arrow"

                android:drawableTint="@color/color_dark_gray"
                android:gravity="center_vertical"
                android:hint="Select"
                android:padding="@dimen/_7sdp"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="2">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:text="Select Property Type"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:id="@+id/tv_proprty_type_pickup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:drawableEnd="@drawable/ic_down_arrow"
                android:drawableTint="@color/color_dark_gray"

                android:gravity="center_vertical"

                android:hint="Select"
                android:padding="@dimen/_7sdp"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>




    </LinearLayout>


</RelativeLayout>